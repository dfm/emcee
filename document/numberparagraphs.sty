%%% chapter

\let\mypkg@@chapter\chapter

\def\chapter{\secdef\@mychapternostar\@mychapterstar}

\def\@mychapterstar#1{%
  \savenumberparagraphs%
  \nonumberparagraphs%
  \mypkg@@chapter*{#1}%
  \restorenumberparagraphs%
}

\def\@mychapternostar[#1]#2{%
  \savenumberparagraphs%
  \nonumberparagraphs%
  \mypkg@@chapter[#1]{#2}%
  \restorenumberparagraphs%
}

